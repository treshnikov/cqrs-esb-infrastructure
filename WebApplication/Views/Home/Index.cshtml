@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>

    <script src="../../Scripts/jquery-2.2.3.min.js" ></script>
    <link href="../../Scripts/bootstrap.min.css" rel="stylesheet" >
    <script src="../../Scripts/bootstrap.min.js" ></script>
</head>
<body>
    <div style="margin: 20px;">
        <div class="btn btn-primary" id="btnQuery">GetUsersWithPermissionsQuery</div>
        <div class="row">
            <div class="col-md-6">
                    <div class="panel">
                        <div>Результат выполнения запроса:</div>
                        <div id="resQuery"></div>
                    </div>
            </div>
        </div>
        <div class="btn btn-primary" id="btnCommand">Send Command</div>
        <div class="row">
            <div class="col-md-6">
                <div class="panel">
                    <div>Результат выполнения команды:</div>
                    <div id="resCommand"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $("#btnQuery").click(function() {
                $.get("/Cqrs/Query?serviceName=users&queryName=GetUsersWithPermissionsQuery&json={'Permissions':['admin','user']}",
                    function(data) {
                        console.log(data);

                        var str = "<table class='table table-bordered table-hover' ><tr><th>Id</th><th>Name</th><th>Permissinon</th></tr>";
                        for (var i = 0; i < data.length; i++) {
                            var permissions = "";
                            for (var j = 0; j < data[i].Permissions.length; j++) {
                                permissions += data[i].Permissions[j];
                                if (j != data[i].Permissions.length - 1)
                                    permissions = + ", ";
                            }
                            str += "<tr><td>" + data[i].Id + "</td><td>" + data[i].Name + "</td><td>" + permissions + "</td></tr>";
                        }
                        str += "</table>";

                        $("#resQuery").html(str);
                    });
            });
        });
    </script>
</body>
</html>