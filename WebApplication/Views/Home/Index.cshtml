@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>

    <script src="../../Scripts/jquery-2.2.3.min.js" ></script>
    <link href="../../Scripts/bootstrap.min.css" rel="stylesheet" >
    <script src="../../Scripts/bootstrap.min.js" ></script>
</head>
<body>
<div style="margin: 20px;">
    <div class="row">
        <div class="col-md-3">
            <div class="btn btn-primary" id="btnQuery">Получить пользователей с указанными правами</div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <input type="text" class="form-control" value="admin" id="permissionInput">
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel">
                <div>Результат выполнения запроса:</div>
                <div id="resQuery" style="min-height: 50px;"></div>
            </div>
        </div>
    </div>
    <div class="btn btn-primary" id="btnCommand">Send Command</div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel">
                <div>Результат выполнения команды:</div>
                <div id="resCommand" style="min-height: 50px;"></div>
            </div>
        </div>
    </div>
</div>

    <script>
        $(document).ready(function () {

            $("#btnQuery").click(function() {
                var permissionsFilter = JSON.stringify($("#permissionInput").val().split(','));

                $.get("/Cqrs/Query?serviceName=users&queryName=GetUsersWithPermissionsQuery&json={'Permissions':" + permissionsFilter + "}",
                    function(data) {
                        console.log(data);

                        var str = "<table class='table table-bordered table-hover' ><tr><th>Id</th><th>Name</th><th>Permissinon</th></tr>";
                        for (var i = 0; i < data.length; i++) {
                            var permissions = "";
                            for (var j = 0; j < data[i].Permissions.length; j++) {
                                console.log(data[i].Permissions[j], data[i].Permissions[j].Name);

                                permissions += data[i].Permissions[j].Name + ", ";
                            }
                            str += "<tr><td>" + data[i].Id + "</td><td>" + data[i].Name + "</td><td>" + permissions + "</td></tr>";
                        }
                        str += "</table>";

                        $("#resQuery").html(str);
                    });
            });
        });
    </script>
</body>
</html>